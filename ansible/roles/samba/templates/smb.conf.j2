[global]
    workgroup = {{ samba_workgroup }}
    server string = Samba Server HA - {{ inventory_hostname }}
    security = user
    map to guest = Bad User
    guest account = nobody
    log file = /var/log/samba/log.%m
    max log size = 50
    server min protocol = SMB2
    client min protocol = SMB2
    dns proxy = no
    wins support = no

[{{ samba_share_name }}]
    comment = Partage HA - CERBERUS
    path = {{ samba_share_path }}
    browseable = yes
    writable = yes
    guest ok = yes
    create mask = 0664
    directory mask = 0775
    force user = nobody
    force group = nobody
